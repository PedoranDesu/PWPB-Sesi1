<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="LATIHAN LAYOUT"
        android:gravity="center"
        android:id="@+id/lbl_judul"
        android:textColor="@android:color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/lay_1"
        android:layout_below="@id/lbl_judul"
        >
        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LATIHAN 1"
            android:textSize="30sp"
            android:id="@+id/btn_lat1"
            />

        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LATIHAN 2"
            android:textSize="30sp"
            android:id="@+id/btn_lat2"
            android:layout_below="@id/btn_lat1"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="TUGAS LATIHAN LAYOUT"
        android:gravity="center"
        android:id="@+id/lbl_judul2"
        android:textColor="@android:color/black"
        android:layout_above="@id/lay_2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/lay_2"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUGAS LATIHAN 1"
            android:textSize="30sp"
            android:id="@+id/btn_tulat1"
            />

        <Button
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUGAS LATIHAN 2"
            android:textSize="30sp"
            android:id="@+id/btn_tulat2"
            android:layout_below="@id/btn_tulat1"
            />
    </RelativeLayout>

</RelativeLayout>